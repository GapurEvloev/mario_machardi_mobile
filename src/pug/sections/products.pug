mixin productsItems(options)
  .products__group
    .products__group_title.global-blocks-title
      span.global-blocks-title_text= options.group_name
    .products__slider.owl-carousel
      each item in options.items
        a.products__slider_item(href='product.html')
          .products__slider_image
            img(src=item.image alt=item.title)
          .products__slider_title= item.title
          .products__slider_price= item.price
            span.rub P

