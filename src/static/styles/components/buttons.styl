.btn
	border-radius 2px
	line-height 34px
	// font-family "SF UI Text"
	font-weight bold
	font-size 21px
	// transition all 50ms easy
	color $white
	&:focus
		outline none
		box-shadow: 0px 0px 4px 2px rgba(204,204,204,1)
	
	// &:active
	// 	transform scale(.95)
	
	&_theme_black
		color $white
		background-color $black
	
	&_theme_gray
		background-color $gray-300
		color $white
		&:active,
		&:hover
			background-color $black
	
	&_theme_pink
		background-color: $buttonColor
		color $white

	&_size
		&_m
			width 48%
		&_l
			width 100%
	
	&-circle
		
		&-red
			background-color transparent	
			border-radius 50%	
			border 	2px solid $red-remove
			width 28px
			height 28px
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex	
			justify-content center	
			align-items center	
			
			img
				position relative	
				top -2px	