.about-container

	.section--about-content
		font-size 18px
		line-height 24px
		margin-bottom 65px
		
		strong	
			font-weight bold
			display block	
			
		.about-section
			.about-content

				&__title
					margin-bottom 30px
				
				&__item
					padding 37px 10px 45px
					background-color: #F9FBFC
					margin-bottom 2px

					&-title
						font-size 18px
						margin-bottom 50px
					
					&-text
						font-size 14px
						
		&.section--about-first
			padding: 0 10px
						
	.section--about-sertificates		
		margin-bottom 0
			
		.about-sertificates
			display flex
			justify-content space-around
			margin-top 36px
			
			&__item
				flex-basis 45%
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				justify-content center
				
				img
					max-width 100%
			
		.about-sertificates-title
			// margin 40px auto
			font-size 20px	

	.section--banner
		margin-bottom 20px
		
		.banner
			position: relative
			width 100%
			height 252px
			overflow: hidden
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			justify-content flex-end
			
			@media(min-width: 465px)
				justify-content center
			
			img

				width auto
				height 100%


