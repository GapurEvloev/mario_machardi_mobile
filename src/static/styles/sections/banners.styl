.section.section--banner
	margin-bottom 22px
	.banner
		position: relative
		width 100%
		img
			width 100%
			z-index 1
		&-descr
			position: absolute
			top 0
			left 0
			display: block
			text-align: center
			width 100%
			font-size 18px
			margin-top 30px
			z-index 2
			p
				margin: 0 
				line-height 1.6
				color #000
				font-weight normal