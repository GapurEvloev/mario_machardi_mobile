.confession-logos
  align-items center
  display flex
  justify-content center
  margin-bottom 20px

  @media (min-width: $grid-md)
    margin-bottom 2.5rem

  img
    filter grayscale(1)
    opacity 0.6

    &[src*="nist"]
      height 20px
      width 76px

      @media (min-width: $grid-xl)
        height 38px
        width 144px
    
    &[src*="iarpa"]
      height 30px
      width 92px

      @media (min-width: $grid-xl)
        height 53px
        width 163px
    
    &[src*="wider"]
      height 30px
      width 30px

      @media (min-width: $grid-xl)
        height 53px
        width 53px

    & + img
      margin-left 33px

      @media (min-width: $grid-md)
        margin-left 80px

      @media (min-width: $grid-xl)
        margin-left 102px

.confession-text
  @extend .section-text
  text-align center

  @media (min-width: $grid-md)
    font-size 1.4rem
    letter-spacing 0.025em
    margin-left auto
    margin-right auto
    width 620px
  
  @media (min-width: $grid-xl)
    width 820px
  
  @media (min-width: $grid-xxl)
    width 1000px