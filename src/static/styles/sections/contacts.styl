.contacts-container
	
	.contacts
		font-size 18px
		line-height 24px
		color $black

		&-section
			margin 22px 0 60px
			
			&.managers
				margin-bottom 0
				
				.contacts-section__item
					
					&:last-child
						margin-bottom 0
			
			&__item
				padding 0 15px
				margin-bottom 30px
				
				&-title
					font-weight: bold
				
				&-text
					
					span
						display: block
					
					a[href*=mailto]
						cursor pointer
						color: $blue
						font-weight bold
						display block
			
			.global-blocks-title
				margin-bottom 45px
				
				.global-blocks-title_text
					width 190px
	.contacts-section
		
		&.feedback
			
			.global-blocks-title
				margin-bottom 30px		
			
			.contacts
				&__feedback
					
					&-form
						
						&_form
							margin 40px 0 80px
						
						&_group
							position: relative
						
						&_field 
							width 100%
							height 50px
							box-shadow none
							border: 1px solid $gray-200
							background-color $formFill
							padding 15px 20px
							margin-bottom 25px
							font-size 14px
						
						&_textarea
							width 100%
							border: 1px solid $gray-200
							background-color $formFill
							box-shadow none
							padding 15px 20px
						
						&_label
							font-size 14px
							line-height 24px
							margin: 0
							position: absolute
							top 15px
							left 20px
						
						&_noty
							font-size 14px
							text-align: center
							color: $gray-100
							margin 18px 0 48px
							
						&_field,
						&_textarea
							&:focus,
							&.has-content
								
								&~.contacts__feedback-form_label
									display none
				






