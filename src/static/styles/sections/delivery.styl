.return-container
	.section--delivery
		
		.delivery
			font-size 18px
			line-height 24px
			font-weight normal
			
			&-section
				background-color #F9FBFC
				padding 32px 25px
				margin-bottom 2px
				
				&__content
					
					&-text
						margin-bottom 20px

						&.more-mb
							margin-bottom 30px
						
						strong
							display: block
							font-weight: bold
							
					.brands
						display -webkit-flex
						display -moz-flex
						display -ms-flex
						display -o-flex
						display flex
						flex-direction column
						align-items center
						max-width 151px
						margin: 30px auto 40px
						
						&__item
							margin-bottom 27px
							
							&:last-child
								margin-bottom 0
						
					&-title
						margin-bottom 30px

						span
							display: block
							
						strong
							display: block
							font-weight: bold
				&.golden
					background-color: #C7B299
					
					.delivery-section__content-text
						color $white
						margin-bottom 90px
					
					.small
						font-size 14px
						font-weight 300
						margin-bottom 0px
						line-height 1			
				
				&__list
					&-title
						margin-bottom 20px
						font-weight: bold
				