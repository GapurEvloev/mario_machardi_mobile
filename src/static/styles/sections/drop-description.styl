.section--drop-descr
	//
		
.drop-descr
	
	&-list
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction column
		
	&-item
		border-bottom 1px solid $gray-100
		
		// &:last-child
		// 	border-bottom: none

		&__head
			//
				
		&__link
			width 100%
			border: none
			color: $black
			background-color transparent
			text-align left
			
			&-inner
				line-height 1.6
				padding 20px 0
				position relative
				font-size 20px
				font-weight: bold
					
				.icon
					position: absolute
					right 2px
					top 50%
					transform translateY(-50%)
		&__text
			
			&-inner
				padding 20px 40px 50px 0
				font-size 18px
				font-weight 300
				line-height 1.4	
		
