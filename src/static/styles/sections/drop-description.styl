.section--drop-descr
	//	
.drop-descr
	
	&-list
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction column
		
	&-item
		border-bottom 1px solid $gray-100
		
		&.bd-top
			border-top: 1px solid #b2b2b2;
				
		&__link
			width 100%
			border: none
			color: $black
			background-color transparent
			text-align left
			
			&.collapsed
				.drop-descr-item__link-inner
					.icon--drop-arrow
						transform translateY(-50%)rotate(0deg)
						
			&-inner
				line-height 1.6
				padding 20px 0
				position relative
				font-size 20px
				font-weight: bold
				text-indent: 2px
					
				.icon
					position: absolute
					right 2px
					top 50%
					transition all 300ms ease-in-out
					transform translateY(-50%)rotate(180deg)

		&__text
			
			&-inner
				padding 20px 40px 50px 0
				font-size 18px
				font-weight 300
				line-height 1.4	
				
				b
					font-weight: bold
				
				ul
					padding-left 15px
					& li
						margin-bottom 1rem
						font-size 14px
						line-height 19px
		
