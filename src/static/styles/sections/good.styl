.section--good
  //
.good
  
  &-slider
    margin-top 15px
    position: relative
    margin-bottom 10px
    
    .owl-nav
      position: absolute
      top 0
      width 100%
      
      .owl-prev,
      .owl-next
        position: absolute
        background none
        border none
        height 200px
        top 0
        width 30px
        z-index 1
        span
          position: relative
          visibility: hidden
        &:after
          content ''
          position: absolute
          width 20px
          height 20px
          top 50%
          background-image: url(../i/general/svg/slider-arrow.svg)
          background-size: contain
          background-position center
          background-repeat: no-repeat

      .owl-next
        right 0
        &:after
          right 0
          
      .owl-prev
        left 0
        &:after
          left 0
          transform rotate(180deg)

    &__item
      outline none
      text-align center

    &__image
      margin 0 auto 15px
      max-width 170px
      overflow hidden
      position: relative
      
      .stock
        background-color #C42B3C
        border-radius 50%
        color $white
        height 49px
        width 49px
        position: absolute
        top 0
        left 0
        display -webkit-flex
        display -moz-flex
        display -ms-flex
        display -o-flex
        display flex
        align-items center
        justify-content center
        font-weight: bold
        font-size 10px
        text-transform uppercase

      & img
        display inline-block
        height auto
        max-width 100%

.good-descr,
.good-button-basket
  margin 0 15px
  
.good-descr
  font-size 16px
  line-height 21px
  
  &__title
    line-height 21px
    font-weight normal
    color $black
    margin-bottom 5px
  
  &__list
    
    &-item
      color #ACACAC
      font-weight normal
      
      span
        color $black
      
      .price,
      .rub
        font-size 23px
        text-transform uppercase
        line-height 16px
        font-weight bold
  
  &__composition
    margin-bottom 12px
    
  &__price
    margin-bottom 12px
    
  .quantity-sizes
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    flex-wrap wrap
    justify-content space-between
    margin-top 10px
    margin-bottom 50px
    
    &__item
      flex-basis 30%
      display -webkit-flex
      display -moz-flex
      display -ms-flex
      display -o-flex
      display flex
      justify-content flex-end
      position relative
      margin 5px 0 
      border 1px solid $gray-200
      background-color $formFill

      &:before
        content ''
        display: inline-block
        z-index 1
        position: absolute
        right 6px
        top 45%
        width 10px
        height 10px
        border-top 2px solid $black
        border-right 2px solid $black
        border-radius 2px
        transform rotate(135deg)translateY(50%)
      
      .select
        width 60%
        border-color $gray-200
        
        .select-styled
          text-indent -5px
          
        .select-options
          transform: translateY(-1px);  
    
    &__select-wrapper
      height 40px
      width 60%
      border-left 1px solid $gray-200
      
    &__letter
      width 40%
      height 40px
      left 0
      display -webkit-flex
      display -moz-flex
      display -ms-flex
      display -o-flex
      display flex
      align-items center
      justify-content center
      border none
      position absolute
      border-right none
    
    &__select
      height 100%
      max-height 100%
      width 100%
      background-color transparent
      box-shadow none
      padding 0 10px
      border none
      background-image: none;
      -webkit-appearance: none;
      appearance: none;
      
      &:focus
        box-shadow inset 0px 0px 10px 1px rgba($blue .2)

.good-button-basket
  margin-bottom 60px