.innovations
  margin-top 55px

  &__title
    margin-bottom 15px

  &__list
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    flex-wrap wrap

    &_item
      padding 0 2px
      text-align center
      width 100%
      position: relative

      &:first-child
        padding-left 0

      &:last-child
        padding-right 0

      &_wrapper
        padding 33px 23px
        position: relative
        display -webkit-flex
        display -moz-flex
        display -ms-flex
        display -o-flex
        display flex
        flex-wrap wrap
        justify-content space-between
        
      &:after
        content ''
        position: absolute
        width 100%
        height 1px
        left 0
        bottom 0
        background-color: $gray-100
      
      &:last-child
        &:after
          display: none  

    &_icons
      margin-bottom 0

      & .icons
        margin 0 2px
        margin-top 5px
        &:first-child
          margin-top 0
        
    
    &_text
      width calc(100% - 100px)
      text-align left

    &_title
      font-size 15px
      font-weight 100
      line-height 25px
      letter-spacing -0.6px

      // +below(1320px)
      //   font-size 19px
      //   line-height 23px

    &_intro
      font-size 21px
      font-weight 700
      line-height 25px
      letter-spacing -0.6px

      // +below(1320px)
      //   font-size 19px
      //   line-height 23px

    &_description
      font-size 14px
      font-weight 100
      line-height 20px
      margin-top 28px