.section--intro
  background-color #3b3b51
  clip-path 'polygon(0 0, 100% 0, 100% calc(100% - %s), 0 100%)' % (round(16*100/375, 3))vw
  color #fff
  overflow hidden
  padding-top 3.65rem
  padding-bottom 3.35rem
  text-align center
  z-index 1

  @media (min-width: $grid-md)
    clip-path 'polygon(0 0, 100% 0, 100% calc(100% - %s), 0 100%)' % (round(70*100/1920, 3))vw
    padding-top 9.725rem
    padding-bottom 8rem
    text-align left

.intro-background
  bottom 0
  left 0
  overflow hidden
  position absolute
  right 0
  top 0
  z-index -1

  img,
  video
    height auto
    left 50%
    min-height 100%
    min-width 100%
    position absolute
    top 50%
    transform translate(-50%, -50%)
    width auto
  
  img
    object-fit cover

.intro-title
  color $primary
  font-size 2.4rem
  font-weight 900
  letter-spacing 0.02em
  line-height 1
  text-transform uppercase

  @media (max-width: $grid-sm-max)
    margin-left -15px
    margin-right -15px

  @media (min-width: $grid-md)
    font-size 5.275rem
    letter-spacing -0.015em
    line-height 0.58
    margin-bottom 0.14em

  strong
    color #fff
    font-weight 900

.intro-subtitle
  color $primary
  font-size 1rem
  font-weight 700
  letter-spacing 0.02em
  margin-bottom 1.3em
  text-transform uppercase

  @media (min-width: $grid-md)
    font-size 1.8rem
    letter-spacing -0.005em
    margin-bottom 0.7em

.intro-lead
  font-weight 300
  line-height 1.3
  margin-bottom 1.5em

  @media (min-width: $grid-md)
    font-size 1.3rem
    margin-bottom 2.75em

.intro-progress
  align-items center
  display flex
  justify-content center
  height 260px
  position absolute
  right 20px
  right calc(var(--grid-gutter-width) / 2)
  top -2rem
  width 260px

  @media (max-width: $grid-md-max)
    display none

  &.active
    .intro-progress-circle--4
      animation progress 1s cubic-bezier(0.785, 0.135, 0.15, 0.86) infinite

.intro-progress-circle
  left 50%
  position absolute
  top 50%
  transform translate(-50%, -50%)

  &--4
    stroke-dashoffset 477.5
    transform rotate(-90deg) translate(-50%, -50%)
    transform-origin 0 0

@keyframes progress {
  to {
    stroke-dashoffset 0
  }
}

.intro-progress-content
  font-weight 300
  display none
  height 120px
  line-height 1.25
  position relative
  text-align center
  width 120px

  &.owl-loaded
    display block

  .owl-item
    opacity 0
    transform scale(0.95)
    transition all 0.33s cubic-bezier(0.785, 0.135, 0.15, 0.86)

    &.active
      opacity 1
      transform scale(1)
      // transition-duration 0.5s
  
  .item
    align-items center
    display flex
    flex-direction column
    height 120px
    justify-content center

.intro-progress-time
  font-size 27px
  // margin-bottom 0.05em

  span
    font-size 34px

.intro-progress-text
  font-size 15px