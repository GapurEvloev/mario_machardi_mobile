.section--main-slider
	//
		
	.main-slider
		.slide
			img 
				width 100%
				
		.owl
			&-dots
				position absolute
				bottom 10px
				width: 100%
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				justify-content center
				height 12px
			
			&-dot
				margin: 0 4.5px
				height 10px
				display: inline-block
				
				span
					height 10px
					display block
					width 10px
					border-radius 50%
					background-color: #CBCBCB
				&.active
					span
						background-color: $black
						
	@media(min-width: $grid-sm)
		height: auto
		.main-slider
			height: auto