.section--novelty
  //
.novelty
  &-title
    margin-bottom 20px
  &__wrapper
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    flex-wrap wrap
  
  &__title
    background-color: #F9FBFC
    order 1
    width 46%
    flex 0 1 46%
    font-size 26px
    font-weight: lighter
    padding-left 28px
    padding-top 53px
    padding-bottom 53px
    line-height 27px
    
    .container
      padding-right 0
      padding-left 0
      b
        font-weight: 500
    
  &__image
    order 2
    flex-basis calc(100% - 46%)
    width: calc(100% - 46%);
    overflow: hidden
    img
      height 100%
    
  &__description
    order 3
    padding 25px 0 45px
    padding-left 28px
    padding-right 28px
    font-size 18px
    font-weight lighter 
    line-height 24px

    .container
      padding-right 0
      padding-left 0