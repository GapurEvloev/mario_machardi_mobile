.page-header
  align-items center
  background-color $darkBlue
  clip-path 'polygon(0 0, 100% 0, 100% calc(100% - %s), 0 100%)' % (round(16*100/375, 3))vw
  color #fff
  display flex
  flex-direction column
  justify-content center
  min-height round(650*100/1920, 3)vw
  padding-top 3.5rem
  padding-bottom 4.5rem
  position relative
  text-align center
  z-index 1

  @media (min-width: $grid-md)
    clip-path 'polygon(0 0, 100% 0, 100% calc(100% - %s), 0 100%)' % (round(70*100/1920, 3))vw
    padding-top 9.5rem
    padding-bottom 10.5rem

  &--tech
    @media (min-width: $grid-md)
      padding-bottom 8rem

.page-header-background
  bottom 0
  left 0
  overflow hidden
  position absolute
  right 0
  top 0
  z-index -1

  img,
  video
    height auto
    left 50%
    min-height 100%
    min-width 100%
    position absolute
    top 50%
    transform translate(-50%, -50%)
    width auto

.page-header-title
  color $blue
  font-size 2.4rem
  font-weight 900
  letter-spacing 0.02em
  line-height 1
  margin-bottom 0
  text-transform uppercase

  @media (max-width: $grid-sm-max)
    margin-left -15px
    margin-right -15px

  @media (min-width: $grid-md)
    font-size 4.5rem
    letter-spacing -0.015em
    line-height 0.58
  
  @media (min-width: $grid-lg)
    font-size 5.275rem

  strong
    color #fff
    font-weight 900

.page-header-subtitle
  color $blue
  font-size 1rem
  font-weight 700
  letter-spacing 0.02em
  margin-top 0.35em
  text-transform uppercase

  @media (min-width: $grid-md)
    font-size 1.8rem
    letter-spacing -0.005em