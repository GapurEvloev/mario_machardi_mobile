.section--pagination
	//
.catalog-pagination
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	align-items center
	justify-content center
	margin-bottom 70px
	
	&__item
		padding 0 5px
		
		&.next
			margin-left 77px
		
		&.prev
			margin-right 77px
			
			img
				transform rotate(180deg)
			

	&__link
		font-size 19px
		line-height 20px
		
		&#page_number
			font-weight bold