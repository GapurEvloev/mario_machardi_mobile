.personal-account
  position: fixed
  margin 0
  padding 0
  z-index 15
  bottom 0
  width 100%
  height 65px
  background-color: $white
  display: flex
  align-items center
  justify-content space-around
  // margin-left: calc(var(--grid-gutter-width) / -2);
  
  &__bottom
    margin 0
    padding 0
    padding-top 10px
    width 100%
    height 100%
    display: flex
    align-items center
    justify-content space-around

    &_item
      list-style none
      cursor pointer
      
      &.popup-link-active
        
        img
          opacity .3
          
        .personal-account__bottom_link
          color $gray-100
      
      img
        width 17px
        height 18px
        margin-right 7px

      &:last-child
        margin-right 0

    &_text,
    &_separator,
    &_link
      display inline-block
      font-size 13px
      font-weight normal
      line-height 20px
      transition color 0.15s ease-out
      vertical-align middle


    &_separator
      font-weight 100

    &_link
      color black
      cursor pointer

      & .icons
        margin-right 10px

    &_separator
      margin 0 5px

    &_unbold
      display inline-block
      font-weight 100
      vertical-align middle

    &_bold
      font-weight 700
    


