.personal-account
  position: fixed
  margin 0
  padding 0
  z-index 4
  bottom 0
  width 100%
  height 65px
  background-color: $white
  display: flex
  align-items center
  justify-content space-around
  margin-left: calc(var(--grid-gutter-width) / -2);
  
  &__bottom
    margin 0
    padding 0
    padding-top 10px
    width 100%
    height 100%
    display: flex
    align-items center
    justify-content space-around

    &_item
      list-style none
      
      img
        width 17px
        height 18px
        margin-right 7px

      &:last-child
        margin-right 0

    &_text,
    &_separator,
    &_link
      display inline-block
      font-size 13px
      font-weight normal
      line-height 20px
      transition color 0.15s ease-out
      vertical-align middle


    &_separator
      font-weight 100

    &_link
      color black
      cursor pointer

      &:hover
        color #d10909

      & .icons
        margin-right 10px

    &_separator
      margin 0 5px

    &_unbold
      display inline-block
      font-weight 100
      vertical-align middle

    &_bold
      font-weight 700



    & .rub
      display inline-block
      margin 0 5px 0 5px
      vertical-align middle

    .windows & .rub
      margin-top -7px

    .windows & .rub + &_unbold
      margin-top -2px

    & .icons__icon-basket
      margin-top -2px

    .windows & .icons__icon-basket
      margin-top -4px

    & [data-popup]
      position relative

      &:after
        background-color black
        bottom 0
        content ''
        display block
        height 0
        position absolute
        transition height 0.1s ease-out
        width 100%
        z-index 3

    & .popup-link-active
      color black

      &:after
        height 3px

