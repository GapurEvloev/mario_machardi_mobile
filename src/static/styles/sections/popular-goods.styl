.section--popular-goods
  margin-bottom 60px
  padding-top 22px

.popular-goods
  
  &__title
    margin-bottom 35px

  &__slider
    margin-top 15px
    position: relative
    
    .owl-nav
      position: absolute
      top 0
      width 100%
      
      .owl-prev,
      .owl-next
        position: absolute
        background none
        border none
        height 200px
        top 0
        width 30px
        z-index 1
        span
          position: relative
          visibility: hidden
        &:after
          content ''
          position: absolute
          width 20px
          height 20px
          top 50%
          background-image: url(../i/general/svg/slider-arrow.svg)
          background-size: contain
          background-position center
          background-repeat: no-repeat

      .owl-next
        right 0
        &:after
          right 0
          
      .owl-prev
        left 0
        &:after
          left 0
          transform rotate(180deg)

    &_item
      outline none
      text-align center

    &_image
      margin 0 auto 15px
      max-width 170px
      overflow hidden

      & img
        display inline-block
        height auto
        max-width 100%

    &_title
      color black
      font-size 15px
      font-weight normal
      transition color 0.15s ease-out

    &_item:hover &_title
      color #000

    &_price
      font-size 16px
      font-weight bold
      margin-top 8px

      & .rub
        margin-left 5px