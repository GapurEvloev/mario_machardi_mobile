.section--popular-goods
  margin-bottom 60px
  padding-top 22px

.popular-goods
  
  &__title
    margin-bottom 35px

  &__dropdown
    margin 0 auto
    width 200px

    &_button
      background none
      border none
      font-size 14px
      font-weight 100
      text-align center
      width 100%

      & .fa
        display inline-block
        font-size 18px
        font-weight 900
        margin 1px 0 0 5px
        vertical-align top

    &_menu
      border-radius 0
      box-shadow 0 2px 4px alpha(black, 0.1)
      left 0
      margin 0 auto
      max-width 160px
      right 0

    &_menu-item
      cursor pointer
      display block
      padding 4px 10px
      position relative
      transition color 0.15s 0.1s ease-out
      text-align center

      &:hover
        color #d10909

      &:before,
      &:after
        background-color alpha(black, 0.02)
        content ''
        height 0
        left 0
        position absolute
        transition height 0.15s 0.05s ease-out
        width 100%

      &:before
        top 0

      &:after
        bottom 0

      &:hover:before,
      &:hover:after
        height 100%

  &__slider
    margin-top 15px
    position: relative
    
    .owl-nav
      position: absolute
      top 0
      width 100%
      
      .owl-prev,
      .owl-next
        position: absolute
        background none
        border none
        height 200px
        top 0
        width 30px
        z-index 1
        span
          position: relative
          visibility: hidden
        &:after
          content ''
          position: absolute
          width 20px
          height 30px
          top 50%
          background-image: url(../i/general/svg/slider-arrow.svg)
          background-size: contain
          background-position center
          background-repeat: no-repeat

      .owl-next
        right 0
        &:after
          right 0
          
      .owl-prev
        left 0
        &:after
          left 0
          transform rotate(180deg)

    &_item
      outline none
      text-align center

    &_image
      margin 0 auto 15px
      max-width 170px
      overflow hidden

      & img
        display inline-block
        height auto
        max-width 100%

    &_title
      color black
      font-size 15px
      font-weight normal
      transition color 0.15s ease-out

    &_item:hover &_title
      color #0096ff

    &_price
      font-size 16px
      font-weight bold
      margin-top 8px

      & .rub
        margin-left 5px