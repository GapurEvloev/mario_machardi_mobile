// Popup forms
.footer
	&-popup
		&-form
			padding 0 30px
			padding-bottom 100px
			display none
			overflow: hidden
			overflow-y: scroll
			overflow: scroll;
			-webkit-overflow-scrolling: touch;
			
			&.popup-open
				display block
				position fixed
				bottom 0
				width 100%
				background-color $white
				z-index 14
				padding-top 30px
				max-height 100%
				overflow-y scroll
				-webkit-transform: translateZ(0px);
				
				&~.fix-bg
					position fixed
					width 100%
					height 100%
					top 0
					z-index 13
					background-color $gray-400
					left 0
			
			&__title
				text-align center
				font-size 21px
				font-weight normal
				color $black
				line-height 25px
				margin-bottom 30px
				
				&_subtitle
					font-size 14px
					font-weight lighter
					line-height 19px
					padding-top 5px
				
				span
					display block
					font-weight bold
					font-size 26px
				
				&_link
					display inline-block
					font-weight bold
					color $signBlue
			
			&__form	
				//
				
				&_label
					width auto
					position absolute
					margin-bottom 0
					top 17px
					left 20px
					font-weight lighter
					display inline-block
					z-index -1
					
					&--fix-top
						top 12px
						
					&-help
						font-size 10px
					
				img
					margin-left 10px
					width 15px
					height 15px
					
				
				&_field
					width 100%
					height 50px
					padding 15px 0 15px 20px
					border 1px solid $gray-200
					box-shadow none
					font-size 14px
					font-weight lighter
					position relative
					background-color transparent
					background-image: none;
					-webkit-appearance: none;
					appearance: none;
					
					&.sign-in-field
						padding-left 60px
					
				&_textarea
					width 100%
					border 1px solid $gray-200
					padding 15px 0 15px 20px
					position relative
					background-color transparent
				
				&_input
					margin-bottom 27px
					position relative
					&.last-input
						margin-bottom 11px
				
				&_submit
					margin-top 22px
					display -webkit-flex
					display -moz-flex
					display -ms-flex
					display -o-flex
					display flex
					justify-content space-between
				
				&_subfield
					&-link,
					&-text
						font-size 14px
						font-weight normal
						color $signBlue
						text-align center
					&-text
						color $gray-100

				&_field,
				&_textarea
					&:focus,
					&.has-content
						padding-left 20px
						&~.footer-popup-form__form_label
							display none
							
			&--signup
				display: block
				position: relative
