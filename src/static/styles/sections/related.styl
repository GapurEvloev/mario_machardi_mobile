.related-list
  @media (max-width: $grid-sm-max)
    margin-left auto
    margin-right auto
    width 270px
  
  @media (min-width: $grid-md)
    align-items stretch
    display flex
    flex-wrap wrap
    margin-left -5px
  
  .owl-nav
    button.owl-prev
      left -32px
    
    button.owl-next
      right -32px

.related-item
  @media (max-width: $grid-sm-max)
    border 1px solid #C4C4C4
    display none
    height 350px
    text-align center
    width 270px

    .owl-loaded .owl-item &
      display block
  
  @media (min-width: $grid-md)
    display flex
    flex-direction column
    margin-left 5px
    width calc(100%/3 - 5.02px)
  
  &__pic
    clip-path polygon(0 0, 100% 0, 100% calc(100% - 16px), 0 100%)
    flex-shrink 0

    @media (min-width: $grid-xl)
      clip-path polygon(0 0, 100% 0, 100% calc(100% - 30px), 0 100%)

    img
      width 100%
  
  &__content
    display flex
    flex-direction column
    flex-grow 1
    padding 18px 30px 0

    @media (min-width: $grid-md)
      padding 35px 20px 0
    
    @media (min-width: $grid-xl)
      padding 55px 40px 0 30px
  
  &__title
    color $darkBlue
    font-size 1.25rem
    font-weight 700
    line-height 1.05
    margin-bottom 0.75em
    text-transform uppercase

    @media (min-width: $grid-lg)
      font-size 1.4rem

    a
      color $darkBlue

      &:hover
        color $primary
  
  &__lead
    font-size 1rem
    font-weight 300
    line-height 1.3
    margin-bottom 28px

    @media (min-width: $grid-md)
      font-size 0.85rem
      letter-spacing 0.025em
      line-height 1.4
      margin-top auto
      margin-right 20px

    @media (min-width: $grid-lg)
      font-size 1rem
    
    @media (min-width: $grid-xl)
      margin-right 40px

  &__more
    @media (min-width: $grid-md)
      font-size 0.85rem
      letter-spacing 0.025em
    
    @media (min-width: $grid-lg)
      font-size 1rem

    .link-more
      .icon-link-arrow
        margin-left 0.5rem

        @media (min-width: $grid-md)
          margin-left 0.85rem