.section--select-case
  overflow hidden

.cases-list
  margin-left auto
  margin-right auto
  width 290px

  @media (min-width: $grid-md)
    display flex
    flex-wrap wrap
    justify-content center
    margin -40px -10px 0
    width auto

  .owl-stage-outer
    overflow visible
  
  .owl-counter
    font-size 17px
    font-weight 300
    line-height 22px
    letter-spacing 0.2em
    margin-bottom 20px
    text-align center
  
  .owl-nav
    text-align center

    button.owl-prev,
    button.owl-next
      position absolute
      top 0
      transform translateY(0)
    
    button.owl-prev
      margin-left -13px
      transform translateX(-34px)
    
    button.owl-next
      transform translateX(34px)

.cases-item
  height 290px
  text-align center
  width 290px

  @media (max-width: $grid-sm-max)
    display none

    .owl-loaded .owl-item &
      display block

  @media (min-width: $grid-md)
    height 240px
    margin 40px 10px 0
    text-align left
    width 335px
    width "calc((%s - var(--grid-gutter-width) - 20px)/2)" % $container-md

  @media (min-width: $grid-lg)
    width 293.3px
    width "calc((%s - var(--grid-gutter-width) - 20px*2)/3)" % $container-lg

  @media (min-width: $grid-xl)
    width 353.3px
    width "calc((%s - var(--grid-gutter-width) - 20px*2)/3)" % $container-xl

  @media (min-width: $grid-xxl)
    height 290px
    width 420px
    width "calc((%s - var(--grid-gutter-width) - 20px*2)/3)" % $container-xxl

  &__link
    border 1px solid #C4C4C4
    color $darkBlue
    display block
    height 100%
    padding 20px 40px

    @media (min-width: $grid-md)
      border-color #EBEBEB
      padding 2rem 30px 0

    @media (min-width: $grid-xl)
      padding-left 40px
      padding-right 40px

    &:hover
      background-color $darkBlue
      color #fff

      .cases-item__title
        color #fff

  &__head
    margin-bottom 2em
    position relative

    @media (min-width: $grid-md)
      margin-bottom 3em
  
  &__title
    @extend .section-title
    line-height 1.1
    margin-bottom 1.35em
    transition color 0.15s ease-in-out

    @media (min-width: $grid-md)
      font-size 1.4rem
      line-height 1
      margin-bottom 0
      text-align left
  
  &__icon
    height 46px

    @media (min-width: $grid-md)
      position absolute
      right 0
      top 0
      transform translateY(-5%)
    
    @media (min-width: $grid-xl)
      height 50px
      transform translateY(0)

    @media (min-width: $grid-xxl)
      height 66px
      max-width 76px
      transform translateY(-12%)
  
  &__text
    font-weight 300
    line-height 1.3

    @media (min-width: $grid-md)
      line-height 1.2