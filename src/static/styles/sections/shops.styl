.section--shops
  //
.shops
  margin-top 25px

  &__alphabet
    margin-bottom 35px
    text-align center

    &_all
      color black
      display inline-block
      font-size 21px
      font-weight 700
      padding 0 10px
      transition color 0.15s ease-out
      vertical-align middle

      &:hover
        color #0096ff

    &_items
      display inline-block
      vertical-align middle

    &_item
      color black
      float left
      font-size 18px
      font-weight 100
      text-transform uppercase
      padding 5px 5px
      transition color 0.15s ease-out, font-weight 0.15s ease-out
      width 28px

      &:hover
        color #0096ff
        font-weight 400

  &__info-shop
    &_column
      width 100%

    &_item
      width 100%
      &:last-child
        border-bottom 1px solid $gray-100     

    &_city-shop-btn
      border none
      border-top 1px solid $gray-100
      font-size 20px
      line-height 18px
      font-weight bold
      color $black
      padding 25px 0 28px
      text-align left
      width 100%
      background-color $white
      position relative
      &.collapsed
        img
          transform translateY(-50%)rotate(0deg)
      
      img
        position absolute
        right 2px
        top 50%
        transition all 200ms linear
        transform translateY(-50%)rotate(180deg) 
      
      &:focus
        box-shadow none

      &_open
        //

    &_wrapper
      &.show
        //

    &_content
      display -webkit-flex
      display -moz-flex
      display -ms-flex
      display -o-flex
      display flex
      flex-wrap wrap

    &_group-content
      flex-basis 50%
      padding-right 20px
      margin-bottom 20px

    &_title
      font-size 14px
      font-weight 700
      line-height 20px
      text-transform uppercase

    &_text
      line-height 20px
      font-size 14px
      font-weight 100

    &_map
      margin-top 40px