.solutions
  overflow hidden
  position relative

  @media (min-width: $grid-md)
    align-items stretch
    clip-path 'polygon(0 0, 100% 0, 100% calc(100% - %s), 0 100%)' % (round(70*100/1920, 3))vw
    display flex
    margin-left auto
    margin-right auto
    max-width 1920px

.solutions-block
  position relative
  text-align center

  @media (min-width: $grid-md)
    width calc(100%/2 - 10.02px)
  
  + .solutions-block
    @media (max-width: $grid-sm-max)
      &::after
        background-color #fff
        content ''
        height round(35*100/1920, 2)vw
        left 50%
        position absolute
        top 0
        transform rotate(-2.09deg) translate(-50%, -50%)
        transform-origin 0 0
        width 200%
    
    @media (min-width: $grid-md)
      margin-left 20px

  &__pic
    height 100%
    left 0
    object-fit cover
    font-family 'object-fit: cover;'
    position absolute
    top 0
    width 100%
    z-index -1
  
  &__content
    color #fff
    padding 42px 40px
    padding 42px calc(var(--grid-gutter-width) / 2)

    @media (min-width: $grid-md)
      padding-top 9rem
      padding-bottom 9rem

  &__links
    line-height 1.75

    @media (min-width: $grid-lg)
      font-size 1.2rem

    .link-industry
      font-weight 700
    
    .link-more
      font-weight 400
    
    .delim
      font-weight 200
      margin-left 4px
      margin-right 4px

.solutions-title
  color $primary
  font-size 1.46rem
  font-weight 700
  line-height 0.65
  margin-bottom 1.15em
  text-align center
  text-transform uppercase

  @media (min-width: $grid-md)
    font-size 2.4rem
    margin-bottom 0.4em

  @media (min-width: $grid-xl)
    font-size 3rem

  strong
    color #fff
    font-weight 700

.solutions-text
  font-weight 300
  line-height 1.3
  margin-bottom 1em

  @media (min-width: $grid-md)
    line-height 1.25

  @media (min-width: $grid-lg)
    font-size 1.2rem
    margin-bottom 0.6em