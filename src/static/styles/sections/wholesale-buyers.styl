.wholesale-buyers

  &__title
    margin-bottom 15px

  &__wrapper
    margin-top 28px
    position relative
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    flex-wrap wrap

  &__item
    height 100%
    padding 0

    &_wrapper
      background-color #f9fbfc
      height 100%
      overflow hidden
      padding 35px 30px
      position relative

    &_title
      font-size 18px
      font-weight 300
      line-height 1.3
      b
        font-weight: bold

    &_list
      margin 0
      padding 0 0 0 (6 + 12)px

    &_list-item
      font-size 21px
      font-weight 100
      list-style none
      line-height 25px
      margin 18px 0

      &:before
        background-color black
        border-radius 50%
        content ''
        display inline-block
        height 6px
        margin-left -(6 + 12)px
        margin-right 12px
        vertical-align middle
        width 6px

    &_list-text-small
      display block
      font-size 16px

  &__audio-adv
    height 210px
    flex-basis 50%
    width 50%

    & .wholesale-buyers__item_wrapper
      background-color #d91b5c
      // padding 65px 35px
      text-align center

    & .icons
      margin-bottom -9px

    &_description
      color $white
      font-size 16px
      font-weight 300
      line-height 1.3

    & a
      line-height 1.6
      color $white
      font-weight: bold

  &__delivery
    height 210px
    top calc(50% + 2px)
    flex-basis 50%
    width 50%

    & .wholesale-buyers__item_wrapper
      background-color #c7b299
      // padding 65px 25px
      text-align center

    & .icons
      height 50px
      margin-bottom 10px

    &_description
      color $white
      font-size 16px
      font-weight 300
      line-height 1.3

    & a
      position: relative
      top 5px
      color $white
      font-weight: bold

  &__sorting
    width 100%
    flex-basis 100% 
    .wholesale-buyers__item_wrapper
      text-align center
      padding: 30px 75px 45px

    &_icon
      font-size 49px
      font-weight bold
      line-height 1
      margin-bottom 20px

  &__advantages
    left (100 - 100 / 3)%
    
.cooperation
  &__audio
    &_play-button,
    &_pause-button
      
      &.hide
        display: none
        
      &.show
        width: 50px;
        height: 50px;
        background-color: transparent;
        border: none;
        background-position-x: center
        background-position-y: 0px;
        margin: 0 auto -10px;
        cursor: pointer;
        background-repeat: no-repeat
        margin-bottom 10px
        
    &_pause-button
      position relative
      
      &:before,
      &:after
        position absolute
        content ''
        width 6px
        height 25px
        background-color: $white
        top 13px
        left 14px
        
      &:after
        left 28px
        