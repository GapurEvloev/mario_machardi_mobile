size()
  if length(arguments) == 1
    width: arguments[0]
    height: arguments[0]
  else
    width: arguments[0]
    height: arguments[1]

focus()
  &:focus
    box-shadow 0 0 0 3px alpha($blue, 0.25)
    outline none
    
.section--page-title
	.page-title
		text-align center
		font-size 26px
		font-weight bold
		color $black
		line-height 18px
		padding 0 15px
		padding-top 20px
		